<h3>{{category}}</h3>
<h1>{{title}}</h1>

<img src="{{picture}}" alt="{{title}}" />
{{#if favorited}}
  <form
    method="POST"
    action="/favorite/{{_id}}/unfavorite?category={{category}}"
  >
    <button type="submit">
      <img src="/images/heart-fill.png" alt="unfavorite" />
    </button>
  </form>
{{else}}
  <form method="POST" action="/favorite/{{_id}}?category={{category}}">
    <button type="submit">
      <img src="/images/heart-line.png" alt="favorite" />
    </button>
  </form>
{{/if}}

<ul>
  {{#each ingredients}}
    <li>{{this}}</li>
  {{/each}}
</ul>
<p>{{instruction}}</p>

<h3 class="goBack">
  <a href="javascript:history.back()">Go back</a>
</h3>