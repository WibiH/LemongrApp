<h2>That's what's gonna cook!</h2>

<div>
  <ul>
    {{#each recipes}}
      <li>
        <a href="/recipes/category/{{_id}}">
          <h2>{{title}}</h2>
          <img src="{{picture}}" alt="{{title}}" />
        </a>
      </li>
      {{#if favorited}}
        <form
          method="POST"
          action="/favorite/{{_id}}/unfavorite?category={{category}}"
        >
          <input type="submit" value="Unfavorite" />
        </form>
      {{else}}
        <form method="POST" action="/favorite/{{_id}}?category={{category}}">
          <button type="submit">Favorite</button>
        </form>
      {{/if}}
    {{/each}}
  </ul>
</div>

<h3 class="goBack">
  <a href="/recipes">Go back</a>
</h3>