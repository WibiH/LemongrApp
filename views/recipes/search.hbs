<h2>That's what's gonna cook!</h2>

<div>
  <ul>
    {{#each recipes}}
      <li>
        <a href="/recipes/category/{{_id}}">
          <h2>{{title}}</h2>
          <img src="{{picture}}" alt="{{title}}" />
        </a>
      </li>
      {{#if favorited}}
        <form
          method="POST"
          action="/favorite/{{_id}}/unfavorite?category={{category}}"
        >
          <button class="hover" type="submit">
            <img
              class="heartbtn"
              src="/images/lemon-button-white.png"
              alt="unfavorite"
            />
          </button>
        </form>
      {{else}}
        <form method="POST" action="/favorite/{{_id}}?category={{category}}">
          <button class="hover" type="submit">
            <img
              class="heartbtn"
              src="/images/lemon-button2.png"
              alt="favorite"
            />
          </button>
        </form>
      {{/if}}
    {{/each}}
  </ul>
</div>

{{! <h3 class="goBack">
  <a href="/recipes">Go back</a>
</h3> }}

<h3 class="goBack">
  <a href="/recipes"><img
      alt="goBack"
      src="/images/go-back.png"
      class="arrowBack"
    /></a>
</h3>