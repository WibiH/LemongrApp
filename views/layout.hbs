<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{{title}}</title>
    <link rel="stylesheet" href="/styles/style.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,500;0,600;1,300;1,500;1,600&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>

    <nav>
      {{#if user}}
        <a href="/account">Your account</a>
        <form action="/authentication/log-out" method="POST">
          <button>Log out</button>
        </form>
      {{else}}
        <a href="/authentication/create-account">Register to find out more</a>
        <a href="/authentication/log-in">Log in</a>
      {{/if}}
    </nav>

    <div class="container">
      {{{body}}}
    </div>

    <script src="/scripts/script.js"></script>
  </body>
</html>