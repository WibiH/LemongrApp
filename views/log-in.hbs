<form class="search" action="/authentication/log-in" method="POST">
  <label for="input-email">Email</label>
  <input
    class="large"
    type="email"
    id="input-email"
    name="email"
    placeholder="Your Email"
  />
  <label for="input-password">Password</label>
  <input
    class="large"
    type="password"
    name="password"
    id="input-password"
    placeholder="A Strong Password"
  />
  <button>Log in</button>
</form>